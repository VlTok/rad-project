unit MainMenu;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, FireDAC.Stan.Intf, FireDAC.Stan.Option,
  FireDAC.Stan.Param, FireDAC.Stan.Error, FireDAC.DatS, FireDAC.Phys.Intf,
  FireDAC.DApt.Intf, FireDAC.Stan.Async, FireDAC.DApt, Data.DB, Vcl.StdCtrls,
  Vcl.Grids, Vcl.DBGrids, Vcl.ExtCtrls, FireDAC.Comp.Client,
  FireDAC.Comp.DataSet, Vcl.ComCtrls;

type
  TMainForm = class(TForm)
    PageControl1: TPageControl;
    Workers: TTabSheet;
    Expenses: TTabSheet;
    Report: TTabSheet;
    ExpensesQuery: TFDQuery;
    FDUpdateExpenses: TFDUpdateSQL;
    Panel1: TPanel;
    DBGrid1: TDBGrid;
    Panel2: TPanel;
    bAddNewWorker: TButton;
    bDeleteWorker: TButton;
    Panel3: TPanel;
    DBGrid2: TDBGrid;
    Panel4: TPanel;
    bAddNewExpense: TButton;
    bUpdateExpense: TButton;
    bDeleteExpense: TButton;
    Panel5: TPanel;
    DBGrid3: TDBGrid;
    Panel6: TPanel;
    bAddNewReport: TButton;
    bAddNewInfo: TButton;
    trWrite: TFDTransaction;
    DataSource1: TDataSource;
    bEditWorker: TButton;
    DBGrid4: TDBGrid;
    Diagram: TTabSheet;
    ReportCreateWord: TTabSheet;
    ReportCreateExcel: TTabSheet;
    procedure bDeleteWorkerClick(Sender: TObject);
    procedure bAddNewWorkerClick(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  MainForm: TMainForm;

implementation

{$R *.dfm}

procedure TMainForm.bAddNewWorkerClick(Sender: TObject);
var
  addDriverForm : AddNewDriver.TAddNewDriverForm;
begin
  addDriverForm := AddNewDriver.TAddNewDriverForm.Create(Self);
  addDriverForm.ShowModal;
end;

procedure TMainForm.bDeleteWorkerClick(Sender: TObject);
var
  deleteWorkerForm : DeleteWorker.TDeleteWorkerForm;
begin
  deleteWorkerForm := DeleteWorker.TDeleteWorkerForm.Create(Self);
  deleteWorkerForm.OnClose := OnDeleteWorkerFormClosed;
  deleteWorkerForm.ShowModal;
  deleteWorkerForm.Free;
end;

end.
